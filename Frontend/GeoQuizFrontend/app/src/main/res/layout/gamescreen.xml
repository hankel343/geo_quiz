<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".GamescreenActivity">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/continents_btn"
        android:layout_width="410dp"
        android:layout_height="55dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Continents"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FlagGameB" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/CapitalGameB"
        android:layout_width="410dp"
        android:layout_height="55dp"
        android:layout_marginTop="204dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Capitals"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/FlagGameB"
        android:layout_width="410dp"
        android:layout_height="55dp"
        android:layout_marginTop="13dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Flags"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CapitalGameB" />

</androidx.constraintlayout.widget.ConstraintLayout>