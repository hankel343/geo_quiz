<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".GamescreenActivity">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/Account_btn"
        android:layout_width="148dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Account"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continents_btn"
        android:layout_width="410dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Continents"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CapitalGameB" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/CapitalGameB"
        android:layout_width="410dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:gravity="center"
        android:text="Capitols"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FlagGameB" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/FlagGameB"
        android:layout_width="410dp"
        android:layout_height="55dp"
        android:layout_marginTop="168dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Flags"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/coatOfArms_btn"
        android:layout_width="410dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Coat of Arms"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continents_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/PopulationHiLo_btn"
        android:layout_width="410dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Higher or Lower"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coatOfArms_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>